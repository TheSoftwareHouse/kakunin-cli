{
  "name": "kakunin-cli",
  "version": "1.0.0",
  "description": "Command-line interface for Kakunin E2E framework",
  "homepage": "https://thesoftwarehouse.github.io/Kakunin/",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSoftwareHouse/kakunin-cli.git"
  },
  "license": "MIT",
  "author": {
    "name": "The Software House",
    "url": "http://tsh.io"
  },
  "contributors": [
    {
      "name": "JÃ³zef Szymala"
    }
  ],
  "main": "./dist/src/index.js",
  "bin": {
    "kakunin-cli": "./dist/src/index.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run build",
    "units": "jest  --no-cache"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^24.0.6",
    "@types/latest-version": "^4.0.0",
    "@types/node": "^11.9.4",
    "@types/node-fetch": "^2.1.6",
    "@types/open": "0.0.29",
    "@types/shelljs": "^0.8.5",
    "@types/yargs": "^12.0.8",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "compare-versions": "^3.4.0",
    "jest": "^24.1.0",
    "latest-version": "^3.1.0",
    "node-fetch": "^2.3.0",
    "open": "0.0.5",
    "shelljs": "^0.8.3",
    "yargs": "^12.0.5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
